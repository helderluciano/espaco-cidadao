<tr>
  <td class="micropost">
    <span class="content"><%= link_to micropost.titulo, micropost %></span>
    <span class="timestamp">
      Postado <%= time_ago_in_words(micropost.created_at) %> atr√°s.
    </span>
  </td>
  <% user = micropost.user rescue User.find(micropost.user_id) %>
  <% if current_user?(user) %>
  <td>
    <%= link_to "Excluir", micropost, :method => :delete,
                                     :confirm => "Tem certeza disso?",
                                     :title => micropost.content %>
  </td>
  <% end %>
</tr>
